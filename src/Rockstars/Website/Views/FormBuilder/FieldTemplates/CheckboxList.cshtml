@using Sitecore.ExperienceForms.Mvc.Html
@model Sitecore.ExperienceForms.Mvc.Models.Fields.CheckBoxListViewModel

<label class="@Model.LabelCssClass">@Html.DisplayTextFor(t => Model.Title)</label>
<input type="hidden" name="@Html.NameFor(m => Model.Value)" />
@foreach (var item in Model.Items)
{
    var id = Guid.NewGuid();
    <div class="checkbox">
        <input type="checkbox" class="@Model.CssClass" name="@Html.NameFor(m => Model.Value)" id="@id" @if (item.Selected) { <text> checked</text>} value="@item.Value" data-sc-tracking="@Model.IsTrackingEnabled" data-sc-field-name="@Model.Name" data-sc-field-key="@Model.ConditionSettings.FieldKey" @Html.GenerateUnobtrusiveValidationAttributes(m => Model.Value) />
        <label for="@id">
            @item.Text
        </label>
    </div>
}
@Html.ValidationMessageFor(m => Model.Value)