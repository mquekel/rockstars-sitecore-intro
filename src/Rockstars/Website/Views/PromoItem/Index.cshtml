@using Glass.Mapper.Sc.Web.Mvc
@model Website.Models.PromoItemModel

@{
    var flexStyle = Model.FullWidth ? "flex-basis: 100%; padding: 80px;" : string.Empty;
}

<div class="flex-item flex__item--flex-headimglink" style="@flexStyle">
    <a class="flex-item-rim" href="@Model.Link.Url">
        <div class="flex-item-bg" style="background-image: url('@Model.Image.Src');"></div>
        <div class="flex-item-content">
            <h2>@Html.Glass().Editable(m => m.Title)</h2>
        </div>
    </a>
</div>